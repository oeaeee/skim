{
  "name": "Skim",
  "description": "Skim modifies the way words are displayed in NYT articles. It hopes to investigate if obscuring characters can enhance reading.",
  "version": "0.2",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" : {
    "default_icon" : "icon-19.png"
  },
  "content_scripts" : [
    {
      "matches" : [
        "*://nytimes.com/*",
        "*://www.nytimes.com/*",
        "*://nyt.com/*",
        "*://www.nyt.com/*"
      ],
     "exclude_matches" : [
        "*://www.nytimes.com/",
        "*://www.nyt.com/"
      ],
      "js" : ["jquery-1.10.2.min.js", "sugar.min.js", "contentscript.js"],
      "css" : ["style.css"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "19" : "icon-19.png",
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}

